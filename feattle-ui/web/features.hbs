{{#> layout }}
  {{#*inline "title"}}
    Feattle - {{ label }}
  {{/inline}}
  {{#*inline "content"}}
      <h1 class="my-4">Current Values</h1>

      <table class="table table-striped table-dark table-hover">
          <thead>
          <tr>
              <th scope="col">Key</th>
              <th scope="col">Description</th>
              <th scope="col">Status</th>
              <th scope="col">Last modification (UTC)</th>
              <th scope="col"></th>
          </tr>
          </thead>
          <tbody>
          {{#each features}}
              <tr>
                  <th scope="row">{{ this.key }}<br><code>{{ this.format }}</code></th>
                  <td>{{ this.description }}</td>
                  <td>{{ this.value_overview }}</td>
                  <td>{{ this.last_modification }}</td>
                  <td><a href="/feature/{{ this.key }}" class="btn btn-primary">More</a></td>
              </tr>
          {{/each}}
          </tbody>
      </table>
  {{/inline}}
{{/layout}}

