{{#> layout }}
    {{#*inline "title"}}
        Feattle - {{ label }}
    {{/inline}}
    {{#*inline "content"}}
        <h1 class="my-4">Current Values</h1>

        <div class="features-struct">
            <span class="doc">/// <span class="doc-keyword">Last reload</span>: {{ last_reload }}</span><br>
            <span class="doc">/// <span class="doc-keyword">Version</span>: {{ version }}</span><br>
            <span class="keyword">struct</span> Feattles {<br>
            <span class="tab">
            {{#each features}}
                {{#if @index }}<br>{{/if}}
                {{#if this.description }}
                    <span class="doc">/// {{ this.description }}</span><br>
                    <span class="doc">///</span><br>
                {{/if}}
                <span class="doc">/// <span class="doc-keyword">Last modification</span>: {{ this.last_modification }}</span> - <a href="/feature/{{ this.key }}" class="link">edit</a><br>
                <span class="field">{{ this.key }}</span>:
                <span class="keyword">{{ this.format }}</span> =
                {{ this.value_overview }}<span class="keyword">,</span><br>
            {{/each}}
            </span>
            }
        </div>
    {{/inline}}
{{/layout}}

